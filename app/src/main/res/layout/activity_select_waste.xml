<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"
        android:background="#2FCD81"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme"
        android:layout_gravity="center_horizontal|top" />

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/paper"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/papel1" />

        <ImageButton
            android:id="@+id/plastic"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/plastico1"/>

        <ImageButton
            android:id="@+id/glass"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/vidrio1"/>

        <ImageButton
            android:id="@+id/tin"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lata1"   />
    </LinearLayout>

</LinearLayout>