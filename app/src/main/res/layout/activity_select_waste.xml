<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="3"
    android:columnCount="3"
    android:background="#4CAF50"

    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="DESECHO"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:textSize="36dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Escoja el tipo de desecho:"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="25dp"
            android:layout_columnSpan="2"
            android:textSize="25dp"
            />
        <ImageButton
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:id="@+id/paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/papel" />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:hint="Papel"
            />

        <ImageButton
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:id="@+id/plastic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/plastico" />
        <TextView
            android:textColor="#47a61e"
            android:id="@+id/estad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Plastico"
             />


        <ImageButton
            android:id="@+id/glass"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_marginTop="30dp"
            android:layout_column="0"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/vidrio"     />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/estado3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:hint="Vidrio" />


        <ImageButton
            android:id="@+id/tin"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/lata"   />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/estad4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Lata"
            />

    </GridLayout>

</ScrollView>