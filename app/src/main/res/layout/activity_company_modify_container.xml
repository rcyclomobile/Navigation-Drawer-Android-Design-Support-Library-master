<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cambiar nombre"
        android:layout_marginLeft="60dp"
        android:gravity="center_horizontal"
        android:id="@+id/textView3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Nombre de Contenedor"
                />

            <EditText
                android:id="@+id/nombre_contenedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_row="2"
                android:enabled="false"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Nombre de contenedor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginRight="18dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Tipo de Desecho"
                />

            <EditText
                android:id="@+id/tipo_desecho"
                android:enabled="false"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Tipo de Desecho"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Fundacion encargada:"
                />

            <EditText
                android:id="@+id/fundacion"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:enabled="false"
                android:gravity="left"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Nombre"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Estado Actual:"
                />

            <EditText
                android:id="@+id/estado"
                android:textColor="@color/primary_dark_material_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_row="8"
                android:enabled="false"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Estado"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Nuevo Estado:"
                />

            <RadioGroup
                android:layout_row="10"
                android:layout_column="1"
                android:id="@+id/waste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/vacio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vacio"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:layout_column="1"
                    android:layout_columnSpan="3"
                    android:layout_row="12"
                    />

                <RadioButton
                    android:id="@+id/mitad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a la Mitad"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:layout_row="13"
                    android:layout_columnSpan="3"
                    android:layout_column="1" />

                <RadioButton
                    android:id="@+id/lleno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â¡LLeno!"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:layout_row="14"
                    android:layout_columnSpan="3"
                    android:layout_column="1" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>