<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout_es"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    android:background="#e0e0e0"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_es"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"
            android:layout_below="@+id/fragment"

            android:background="#2FCD81"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            android:layout_gravity="center_horizontal|top" />


        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Mis Contenedores"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar_es"/>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="400dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/title"
            android:background="#fff">

            <ListView
                android:id="@+id/list_view_solicitudes"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:listitem="@layout/item_list">
            </ListView>

        </android.support.v4.widget.SwipeRefreshLayout>






    </RelativeLayout>


