                android:text="Nueva Direcci贸n contenedor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/et_NuevaDireccion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nueva direcci贸n del contenedor">
            </EditText>
        </LinearLayout>
    </ScrollView>

