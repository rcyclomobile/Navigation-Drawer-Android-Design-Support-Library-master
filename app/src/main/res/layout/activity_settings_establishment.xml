<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0">

    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/barrita"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"
            android:layout_below="@+id/barrita"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="#2FCD81"
            android:elevation="4dp"
            app:theme="@style/ToolbarTheme"/>

        <RelativeLayout
            android:layout_width="wrap_content" android:layout_height="200dp"
            android:background="@drawable/green10"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/nombreHeaderCo"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_above="@+id/correoHeaderCo"

                android:gravity="center_horizontal"
                android:textSize="26dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Nombre"   />

            <TextView
                android:id="@+id/correoHeaderCo"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_above="@+id/phoneHeaderCo"

                android:gravity="center_horizontal"
                android:textSize="22dp"
                android:textColor="#fff"
                android:text="Correo" />

            <TextView
                android:id="@+id/phoneHeaderCo"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_above="@+id/adressCo"

                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="telefono"
                />

            <TextView
                android:id="@+id/adressCo"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"

                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="direccion"
                />
        </RelativeLayout>


        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rowCount="4" android:columnCount="3"
            android:background="#fff"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_row="0" android:layout_column="0"
                android:src="@drawable/email" />

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_row="0" android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:textSize="12dp"
                android:text="Cambiar Correo electronico" />

            <info.hoang8f.widget.FButton
                android:id="@+id/emailCo"
                android:layout_width="90dp" android:layout_height="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_row="0" android:layout_column="2"
                android:textColor="#ffffff"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                fbutton:shadowEnabled="true"
                android:textSize="14sp"
                android:text="cambiar"
                />


            <ImageView

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_row="1" android:layout_column="0"
                android:layout_marginTop="20dp"
                android:src="@drawable/phone" />
            <TextView

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_row="1" android:layout_column="1"
                android:layout_gravity="center|left"

                android:textSize="12dp"
                android:text="Cambiar Telefono" />

            <info.hoang8f.widget.FButton
                android:id="@+id/phoneCo"
                android:layout_width="90dp" android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_row="1" android:layout_column="2"
                android:textColor="#ffffff"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                fbutton:shadowEnabled="true"
                android:textSize="14sp"
                android:text="cambiar"
                />

            <ImageView

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_row="2" android:layout_column="0"
                android:src="@drawable/password" />
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_row="2" android:layout_column="1"
                android:layout_gravity="center|left"
                android:textSize="12dp"
                android:text="Cambiar Contrasenna"  />

            <info.hoang8f.widget.FButton
                android:id="@+id/passwordCo"
                android:layout_width="90dp" android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_row="2" android:layout_column="2"
                android:textColor="#ffffff"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                fbutton:shadowEnabled="true"
                android:textSize="14sp"
                android:text="cambiar" />


            <info.hoang8f.widget.FButton
                android:id="@+id/item_navigation_drawer_drafts_es"

                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_row="3" android:layout_column="0"
                android:layout_marginTop="36dp"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                android:layout_columnSpan="3"


                android:drawablePadding="0dp"
                android:paddingRight="40dp"
                android:paddingLeft="50dp"
                android:drawableLeft="@drawable/ic_action_content_report"
                android:gravity="center"

                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Eliminar Cuenta"
                android:textColor="#fff"
                />

        </GridLayout>





    </RelativeLayout>





</FrameLayout>