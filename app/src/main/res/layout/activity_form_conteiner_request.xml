<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0"
    tools:context="com.hfad.carlostest.formularioActivity"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/barrita"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"

            android:background="#2FCD81"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/barrita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <GridLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="5"
            android:columnCount="2"
            android:background="#ffffff"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayout">

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:hint="Empresa:" />

            <TextView
                android:id="@+id/empresa"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_row="0" android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="asdf"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_row="1" android:layout_column="0"
                android:hint="Tipo de desecho:"    />

            <TextView
                android:id="@+id/waste"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_row="1" android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="asdf"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_row="2" android:layout_column="0"
                android:hint="Fundacion Asociada:" />

            <TextView
                android:id="@+id/fundacion"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_row="2" android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:text="asdf"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_row="3" android:layout_column="0"
                android:text="Direccion:"/>

            <TextView
                android:id="@+id/coordenadas"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_row="3" android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:text="asdf"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_row="4" android:layout_column="0"
                android:text="Estado:"  />

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_row="4" android:layout_column="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="asdf"
                android:layout_gravity="center"/>
        </GridLayout>


        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#fff"
            android:layout_below="@+id/gridLayout"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
                android:gravity="center_horizontal"
                android:text="Ingrese a continuacion el nombre del nuevo contenedor:" />

            <EditText
                android:id="@+id/nombre_contenedor"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <info.hoang8f.widget.FButton
                android:id="@+id/confirmar"
                android:onClick="confirmar"

                android:layout_width="match_parent" android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                style="?android:textAppearanceSmall"


                fbutton:shadowEnabled="true"
                fbutton:buttonColor="#E64E37"

                android:textAllCaps="true"
                android:textStyle="bold"
                android:theme="@android:style/Theme.Light"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="Confirmar Solicitud" />

        </LinearLayout>

    </RelativeLayout>



</FrameLayout>