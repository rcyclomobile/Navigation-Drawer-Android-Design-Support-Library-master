<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="?colorPrimary"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:background="@drawable/green" />

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="90dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo5" />

    <TextView
        android:id="@+id/nombreHeaderCo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/md_white_1000"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:text="Nombre" />

    <TextView
        android:id="@+id/correoHeaderCo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/md_white_1000"
        android:layout_marginTop="230dp"
        android:layout_gravity="center_horizontal"
        android:text="Correo" />

    <TextView
        android:id="@+id/fechaHeaderCo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/md_white_1000"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:text="Fecha" />

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />


    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="310dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="fill_horizontal"
            android:text="Nombre" />
        <TextView
            android:layout_gravity="right"
            android:textSize="20dp"
            android:id="@+id/nameCo"
            android:text="nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="fill_horizontal"
            android:text="Email" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:id="@+id/emailCo"
            android:layout_gravity="right"
            android:text="Email" />
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="fill_horizontal"
            android:text="Teléfono" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/phoneCo"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:text="telefono" />

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="fill_horizontal"
            android:text="Dirección" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/adressCo"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:text="direccion" />

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="fill_horizontal"
            android:text="Contraseña"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/passwordCo"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:layout_gravity="right"
            android:text="telefono" />

    </GridLayout>

    <Button
        android:id="@+id/txtEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="web"
        android:gravity="center"
        android:layout_marginTop="230dp"
        android:padding="20px"
        android:layout_marginRight="75dp"
        android:text="@string/defaultprofile"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:onClick="editar_perfil"
        />

    <Button
        android:id="@+id/txtEditarContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="web"
        android:gravity="center"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="230dp"
        android:padding="20px"
        android:onClick="editar_contraseña"
        android:text="@string/defaultpassword"
        android:textAppearance="?android:attr/textAppearanceSmall" />


</FrameLayout>
