<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer_layout_es"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    android:background="#e0e0e0"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_es"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"
            android:layout_below="@+id/fragment"

            android:background="#2FCD81"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            android:layout_gravity="center_horizontal|top" />


        <!--        <TextView
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:text="Mis Contenedores"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/toolbar_es"/>
        -->

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent" android:layout_height="180dp"
            android:id="@+id/map" tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_below="@+id/toolbar_es"
            android:layout_centerHorizontal="true">

        </fragment>


        <info.hoang8f.widget.FButton
            android:id="@+id/Empresas"
            android:layout_width="120dp" android:layout_height="24dp"
            android:layout_below="@+id/map"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="40dp"

            fbutton:buttonColor="@color/fbutton_color_turquoise"
            fbutton:shadowEnabled="true"

            android:textAllCaps="false"
            android:gravity="center"
            android:text="Empresas"
            android:textColor="#fff"
            android:textSize="14sp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/fundacionn"
            android:layout_width="120dp" android:layout_height="24dp"
            android:layout_below="@+id/map"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="200dp"

            fbutton:buttonColor="@color/fbutton_color_turquoise"
            fbutton:shadowEnabled="true"

            android:textAllCaps="false"
            android:gravity="center"
            android:text="Fundacion"
            android:textColor="#fff"
            android:textSize="14sp"/>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_below="@+id/Empresas"
            android:background="#fff">

            <ListView
                android:id="@+id/list_view_solicitudes"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                tools:listitem="@layout/item_list_container_establishment">
            </ListView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:id="@+id/button2"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/map"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bigger"
            android:onClick="zoom_map"
            android:alpha="0.7" />

    </RelativeLayout>


