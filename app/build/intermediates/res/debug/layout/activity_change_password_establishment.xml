<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/barrita"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"

            android:layout_below="@+id/barrita"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="#2FCD81"
            android:elevation="4dp"
            app:theme="@style/ToolbarTheme" />



        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content" android:layout_height="200dp"
            android:background="@drawable/green10"
            android:layout_gravity="center_horizontal|top"

            android:layout_below="@+id/toolbar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/nombreHeaderCo"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_alignParentBottom="true"

                android:gravity="center_horizontal"
                android:textSize="36dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Nombre" />
        </RelativeLayout>


        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:rowCount="7" android:columnCount="2"
            android:background="#fff"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/gridLayout">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_row="0" android:layout_column="0"
                android:src="@drawable/password" />


            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="0dp" android:layout_marginLeft="12dp"
                android:layout_row="0" android:layout_column="1"
                android:layout_gravity="center|left"

                android:textSize="18sp"
                android:text="Ingrese la nueva Contraseña" />

            <EditText
                android:id="@+id/nuevoCorreo1"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_row="1" android:layout_column="0" android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="25dp" android:layout_marginLeft="12dp"
                android:layout_row="2" android:layout_column="0" android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="Vuelva a ingresar la nueva Contraseña" />

            <EditText
                android:id="@+id/nuevoCorreo2"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_row="3" android:layout_column="0" android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:inputType="textPassword"

                />

            <info.hoang8f.widget.FButton
                android:id="@+id/aceptar"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_row="5" android:layout_column="0" android:layout_columnSpan="2"

                android:layout_gravity="center_horizontal"
                style="?android:textAppearanceSmall"
                android:textColor="#ffffff"
                android:text="Aceptar"
                android:onClick="change_password"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                fbutton:shadowEnabled="true"
                />
        </GridLayout>


    </RelativeLayout>



</FrameLayout>
