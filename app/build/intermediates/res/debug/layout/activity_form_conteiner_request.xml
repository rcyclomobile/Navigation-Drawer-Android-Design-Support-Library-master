<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:rowCount="5"
        android:columnCount="2"
        android:background="#ffffff"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:layout_column="0"
            android:hint="Empresa:" />

        <TextView
            android:id="@+id/empresa"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_row="0" android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="asdf"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_row="1" android:layout_column="0"
            android:hint="Tipo de desecho:"    />

        <TextView
            android:id="@+id/waste"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_row="1" android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="asdf"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_row="2" android:layout_column="0"
            android:hint="Fundacion Asociada:" />

        <TextView
            android:id="@+id/fundacion"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_row="2" android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:text="asdf"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_row="3" android:layout_column="0"
            android:text="Direccion:"/>

        <TextView
            android:id="@+id/coordenadas"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_row="3" android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:text="asdf"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_row="4" android:layout_column="0"
            android:text="Estado:"  />

        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:layout_row="4" android:layout_column="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="asdf"
            android:layout_gravity="center"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:gravity="center_horizontal"
            android:text="Ingrese a continuacion el nombre del nuevo contenedor:" />

        <EditText
            android:id="@+id/nombre_contenedor"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/confirmar"
            android:onClick="confirmar"

            android:layout_width="match_parent" android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:background="#2FCD81"
            android:theme="@android:style/Theme.Light"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Confirmar Solicitud" />

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"
        android:background="#2FCD81"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout><!-- From: file:/C:/Users/Carlos/AndroidStudioProjects/ANDROX/Navigation-Drawer-Android-Design-Support-Library-master/app/src/main/res/layout/activity_form_conteiner_request.xml -->