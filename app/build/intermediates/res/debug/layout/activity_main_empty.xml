<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/barrita"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"

            android:background="#2FCD81"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/barrita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp" android:layout_marginRight="28dp"
            android:background="#fff"

            android:drawableBottom="@drawable/bolsa_kokoro"

            android:gravity="center_horizontal"
            android:text="Aun no tienes contenedores habilitados :(\n\nPuedes Solicitar un nuevo contenedor con el boton o bien dirigiendote a'Menu'->'Solicitar contenedor'\n"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <info.hoang8f.widget.FButton
            android:id="@+id/ayudar"

            android:layout_width="match_parent" android:layout_height="48dp"
            android:layout_below="@+id/textView1"

            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"

            fbutton:shadowEnabled="true"

            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Solicitar nuevo contenedor"/>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@+id/ayudar"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="28dp" android:layout_marginRight="28dp"
            android:background="#fff"

            android:drawableBottom="@drawable/camion_cocoro"

            android:gravity="center"
            android:text="Si ya solicitaste un contenedor, solo debes esperar que la funcionacion te visite.
            \n\nPuedes revisar tus contenedores en espera en 'Menu'->'Contenedores en espera'.
            \n \nEn caso de cualquier duda, problema o consulta no dudes en comunicarte con nosotros." />


        <info.hoang8f.widget.FButton
            android:id="@+id/pendientes"

            android:layout_width="match_parent" android:layout_height="48dp"
            android:layout_below="@+id/textView2"

            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"

            fbutton:shadowEnabled="true"
            fbutton:buttonColor="#ffa700"

            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Revisar contenedores pendientes"/>


        <info.hoang8f.widget.FButton
            android:id="@+id/correo"

            android:layout_width="match_parent" android:layout_height="48dp"
            android:layout_below="@+id/pendientes"

            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"

            fbutton:shadowEnabled="true"
            fbutton:buttonColor="#E64E37"

            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Enviar un correo"/>



    </RelativeLayout>
