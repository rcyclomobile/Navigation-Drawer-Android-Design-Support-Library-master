<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/barrita"
            android:layout_width="match_parent" android:layout_height="25dp"
            android:background="#000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?actionBarSize"

            android:background="#2FCD81"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/barrita"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"

            android:layout_marginTop="10dp"

            android:background="#fff"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <info.hoang8f.widget.FButton
                android:id="@+id/paper"
                android:layout_width="match_parent" android:layout_height="110dp"
                android:layout_margin="10dp"

                android:drawableLeft="@drawable/select_papel"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                fbutton:shadowEnabled="true"

                android:text="Papel"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24dp" />

            <info.hoang8f.widget.FButton
                android:id="@+id/plastic"
                android:layout_width="match_parent" android:layout_height="110dp"
                android:layout_margin="10dp"

                android:drawableLeft="@drawable/select_plastico"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                fbutton:buttonColor="#F9DF66"
                fbutton:shadowEnabled="true"

                android:text="Plastico"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24dp"
                />

            <info.hoang8f.widget.FButton
                android:id="@+id/glass"
                android:layout_width="match_parent" android:layout_height="110dp"
                android:layout_margin="10dp"

                android:drawableLeft="@drawable/select_vidrio"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                fbutton:buttonColor="@color/fbutton_color_emerald"
                fbutton:shadowEnabled="true"

                android:text="Vidrio"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24dp"
                />

            <info.hoang8f.widget.FButton
                android:id="@+id/tin"
                android:layout_width="match_parent" android:layout_height="110dp"
                android:layout_margin="8dp"

                android:drawableLeft="@drawable/select_lata"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                fbutton:buttonColor="#E64E37"
                fbutton:shadowEnabled="true"

                android:text="Lata"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24dp"  />
        </LinearLayout>


    </RelativeLayout>
