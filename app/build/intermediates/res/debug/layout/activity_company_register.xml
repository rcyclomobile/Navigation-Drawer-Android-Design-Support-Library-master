<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e0e0e0"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="#000"/>

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="?actionBarSize"
        android:background="#2FCD81"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme"
        android:layout_gravity="center_horizontal|top" />

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <EditText
            android:id="@+id/Cname"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:textSize="12dp"
            android:inputType="textPersonName"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/Cemail"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:textSize="12dp"
            android:inputType="textEmailAddress"
            android:hint="Correo electronico" />

        <EditText
            android:id="@+id/CPassword"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:layout_row="5" android:layout_column="0"
            android:layout_columnSpan="2"
            android:textSize="12dp"
            android:inputType="textPassword"
            android:hint="Contraseña" />

        <EditText
            android:id="@+id/CPhone"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:textSize="12dp"
            android:inputType="textPassword"
            android:hint="Repetir contraseña" />

        <EditText
            android:id="@+id/CAddress"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:textSize="12dp"
            android:inputType="textPassword" />

        <info.hoang8f.widget.FButton
            android:id="@+id/EscogerDireccion"
            android:layout_width="120dp" android:layout_height="24dp"
            android:layout_below="@+id/ContainerName"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="22dp"
            android:layout_centerHorizontal="true"

            fbutton:buttonColor="@color/fbutton_color_turquoise"
            fbutton:shadowEnabled="true"

            android:textAllCaps="false"
            android:gravity="center"
            android:text="Mapa"
            android:textColor="#fff"
            android:textSize="14sp"
            android:onClick="sendToMap"/>


        <info.hoang8f.widget.FButton
            android:id="@+id/register"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"

            fbutton:shadowEnabled="true"
            fbutton:buttonColor="#E64E37"

            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"

            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:text="Registrarse"
            android:onClick="sendForm"/>

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
            android:textSize="9dp"
            android:text="Al registrarte estas aceptando los Terminos de Uso y Condiciones."
            />

    </LinearLayout>




</FrameLayout><!-- From: file:/C:/Users/Roberto/Desktop/Cosas/isw/10/Navigation-Drawer-Android-Design-Support-Library-master/app/src/main/res/layout/activity_company_register.xml -->