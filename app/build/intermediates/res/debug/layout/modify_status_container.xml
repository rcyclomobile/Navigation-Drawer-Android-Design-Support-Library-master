<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cambiar estado"
        android:layout_marginLeft="60dp"
        android:gravity="center_horizontal"
        android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:text="Estado actual:"
                />


            <RadioGroup
                android:id="@+id/state"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_row="7" android:layout_column="0" android:layout_columnSpan="1"
                android:gravity="left">

                <RadioButton
                    android:id="@+id/rbVacio"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
                    android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
                    android:checked="true"
                    android:textSize="16dp"
                    android:text="Vacio"/>

                <RadioButton
                    android:id="@+id/rbMedio"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
                    android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
                    android:textSize="16dp"
                    android:text="Medio" />

                <RadioButton
                    android:id="@+id/rbLleno"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
                    android:layout_marginLeft="18dp" android:layout_marginRight="18dp"
                    android:textSize="16dp"
                    android:text="Lleno" />


            </RadioGroup>

        </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Carlos/AndroidStudioProjects/ANDROX/Navigation-Drawer-Android-Design-Support-Library-master/app/src/main/res/layout/modify_status_container.xml -->