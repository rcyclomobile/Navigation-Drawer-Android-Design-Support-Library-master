<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0e0e0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_kitkat_height"
        android:background="#000000"/>

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="@dimen/status_bar_margin_top"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#2FCD81"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarTheme" />

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="200dp"
        android:background="@drawable/green9"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/nombreHeaderCo"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/correoHeaderCo"

            android:gravity="center_horizontal"
            android:textSize="26dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Nombre"   />

        <TextView
            android:id="@+id/correoHeaderCo"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/phoneHeaderCo"

            android:gravity="center_horizontal"
            android:textSize="22dp"
            android:textColor="#fff"
            android:text="Correo" />

        <TextView
            android:id="@+id/phoneHeaderCo"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/adressCo"

            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="telefono"
            />

        <TextView
            android:id="@+id/adressCo"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"

            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="direccion"
            />
    </RelativeLayout>


    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:rowCount="3" android:columnCount="2"
        android:background="#fff"
        android:layout_margin="8dp"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_row="0" android:layout_column="0"
            android:src="@drawable/email" />
        <TextView
            android:id="@+id/emailCo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginLeft="12dp"
            android:layout_row="0" android:layout_column="1"
            android:layout_gravity="center|left"

            android:textSize="14dp"
            android:text="Cambiar Correo electronico" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_row="1" android:layout_column="0"
            android:src="@drawable/phone" />
        <TextView
            android:id="@+id/phoneCo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginLeft="12dp"
            android:layout_row="1" android:layout_column="1"
            android:layout_gravity="center|left"

            android:textSize="14dp"
            android:text="Cambiar Telefono" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_row="2" android:layout_column="0"
            android:src="@drawable/password" />
        <TextView
            android:id="@+id/passwordCo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="0dp" android:layout_marginLeft="12dp"
            android:layout_row="2" android:layout_column="1"
            android:layout_gravity="center|left"

            android:textSize="14dp"
            android:text="Cambiar Contrasenna"  />

    </GridLayout>



    <Button
        android:id="@+id/txtEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="web"
        android:gravity="center"
        android:layout_marginTop="230dp"
        android:padding="20px"
        android:layout_marginRight="75dp"
        android:text="@string/defaultprofile"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:onClick="editar_perfil"
        />

    <Button
        android:id="@+id/txtEditarContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="web"
        android:gravity="center"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="230dp"
        android:padding="20px"
        android:onClick="editar_contraseña"
        android:text="@string/defaultpassword"
        android:textAppearance="?android:attr/textAppearanceSmall" />


